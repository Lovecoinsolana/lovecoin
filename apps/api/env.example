# ==============================================
# LOVECOIN API - Environment Variables
# ==============================================
# Copy this file to .env and configure values.
# ==============================================

# Server
NODE_ENV=development
API_PORT=3001
API_HOST=localhost
API_BASE_URL=http://localhost:3001

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/lovecoin

# JWT Authentication
# Generate secure secret: openssl rand -base64 64
JWT_SECRET=development-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Solana Configuration
# Use devnet for development, mainnet-beta for production
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet
PLATFORM_WALLET_ADDRESS=YOUR_WALLET_ADDRESS

# Pricing (lamports)
VERIFICATION_FEE_LAMPORTS=10000000
MESSAGE_FEE_LAMPORTS=500000
PHOTO_MESSAGE_FEE_LAMPORTS=1000000

# S3 Storage (optional for development - uses local storage if not set)
# S3_BUCKET=lovecoin-photos
# S3_REGION=us-east-1
# S3_ACCESS_KEY_ID=your-access-key
# S3_SECRET_ACCESS_KEY=your-secret-key
# S3_ENDPOINT=https://custom-endpoint.com
# S3_PUBLIC_URL=https://cdn.example.com
